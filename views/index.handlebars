 <h1>Burgers</h1>


<ul>
  <h1> These are not devoured </h1>
  {{#each burgers}}
  {{#unless devoured}}
     <h1>{{this.id}}. {{this.burger_name}}</h1>
  {{/unless}}
  {{/each}}
</ul>

<ul>
  <h1> These are devoured </h1>
  {{#each burgers}}
  {{#if devoured}}
     <h1>{{this.id}}. {{this.burger_name}}</h1>
  {{/if}}
  {{/each}}
</ul>


