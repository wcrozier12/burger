 <div class='main'>
  <div class='mainHeader'>
    <div id='logo'></div>
  </div>

  <div class='child'>
      {{#each burgers}}
      {{#unless devoured}}
      <div class='burger'>
        <h2>{{this.id}}. {{this.burger_name}}</h2>
        {{> burgers/burger devoured = 1}}
      </div>
      {{/unless}}
      {{/each}}
  </div>


<div class='child' id='addBurg'>
<h2>Add a Burger</h2>
  <form class="create-form">
    <div class="form-group">
      <input type="text" id="burgName" placeholder="Can I take your order?" name="name">
    </div>

    <button id="submitBurg">Place Order</button>
  </form>
</div>

  <div class='child'>
    {{#each burgers}}
    {{#if devoured}}
    <div class='burgerEaten'>
      <h2>{{this.id}}. {{this.burger_name}}</h2>
      {{> burgers/burger devoured = 0}}
    </div>
    {{/if}}
    {{/each}}
  </div>
</div>



